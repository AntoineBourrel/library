{% extends 'front/base.html.twig' %}

{% block title %}
    {{ book.title }}
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="book_show">
                    <img src="{{ asset('uploads/images/' ~ book.image) }}" alt="image">
                    <h2>{{ book.title }}</h2>
                    <p>nombre de pages : {{ book.nbPages }}</p>
                    <p>ann√©e de parution : {{ book.publishedAt | date('d-m-y') }}</p>
                    {% if book.author is not null %}
                        auteur :<a href="{{ path('author_show', {'id' : book.author.id}) }}">{{ book.author.firstName }} {{ book.author.lastName }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}