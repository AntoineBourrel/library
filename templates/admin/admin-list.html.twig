{% extends 'admin/base.html.twig' %}

{% block title %}
{% endblock %}

{% block main %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a href="{{ path('admin_admin_insert') }}" class="btn bg-info">Entrer un nouvel admin</a>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {% for admin in admins %}
                        <h2>{{ admin.email }}</h2>
                        {% for role in admin.roles %}
                            <span>{{ role }} | </span>
                        {% endfor %}
                        <a href="{{ path('admin_admin_delete', {'id' : admin.id }) }}" class="btn bg-info">Supprimer</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}